<!DOCTYPE html>
<html>
  <head>
    <title>Minimum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
  </head>

  <body>
    <header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <%= link_to "ロゴ", root_path, class:"navbar-brand p-3" %>
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if user_signed_in? %>
          <div class="text-center">
            ようこそ
            <%= current_user.last_name %>
            さん
          </div>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <div class="social">
                <%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item active">
              <div class="social">
                <%= link_to 'セール', sell_items_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'アイテム一覧', items_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to '制限', new_category_management_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'アイテム新規登録', new_item_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to '購入アイテム分析',  charts_purchase_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'アイテム分析',  charts_disposal_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to notifications_path, class: "nav-link" do %>
                  <% if current_user.passive_notifications.where(checked: false).any? %>
                    <span class = "fa-stack">
                      <i class = "far fa-bell fa-lg fa-stack-2x", style="font-size: 1.5em;" ></i>
                      <i class = "fas fa-circle n-circle fa-stack-1x" ></i>
                    </span>
                  <% else %>
                    <i class = "far fa-bell fa-lg", style="font-size: 1.5em;" ></i>
                  <% end %>
                <% end %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to '今日の服を登録', wear_today_new_items_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </div>
            </li>

          </ul>
        <% elsif admin_signed_in? %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <div class="social">
                <%= link_to 'アイテム一覧', admin_items_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to '注文履歴一覧', admin_sell_items_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'カラー', admin_colors_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'カテゴリー', admin_categories_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'ブランド', admin_brands_path, class: 'nav-link' %>
              </div>
            </li>
            <li class="nav-item">
              <div class="social">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
              </div>
            </li>
          </ul>
        </div>
       <% else %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <div class="social">
                  <%= link_to 'About', homes_about_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-dark' %>
                </div>
              </li>
              <li class="nav-item">
                <div class="social">
                  <%= link_to 'ログイン', user_session_path, class: 'nav-link text-dark' %>
                </div>
              </li>
            </ul>
          </div>

      <% end %>
    </div>
  </nav>
</header>
<%= render 'layouts/flash' %>
    <%= yield %>
  </body>
</html>
