<% if user_signed_in? && current_user.id.to_s == params[:id] %>
<!--ログインユーザーの詳細画面-->
  <div class="container">
    <div class="row">
      <div class="col">

        <h2><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h2>
        <table class="table table-hover table-borderless">
          <tr><th>ユーザー画像</th><th><%= attachment_image_tag @user, :icon_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th></tr>
          <tr><th>ニックネーム</th><th><%= @user.nickname %></th></tr>
          <tr><th>氏名</th><th><%= @user.last_name %><%= @user.first_name %></th></tr>
          <tr><th>フリガナ</th><th><%= @user.last_name_kana %><%= @user.first_name_kana %></th></tr>
          <tr><th>年齢</th><th><%= @user.age %>歳</th></tr>
          <tr><th>郵便番号</th><th><%= @user.postal_code %></th></tr>
          <tr><th>住所</th><th><%= @user.address %></th></tr>
          <tr><th>電話番号</th><th><%= @user.phone_number %></th></tr>
          <tr><th>メールアドレス</th><th><%= @user.email %></th></tr>

        </table>
        <%= link_to "出品した商品", myitems_by_sell_path %>
        <%= link_to "購入した商品", myitems_by_order_path %>
        <%= link_to "評価", rate_user_path(@user) %>
        <%= link_to "いいねしたアイテム", likes_user_path(@user) %>
      </div>
    </div>
  </div>

<% else %>
<!--他のユーザーへの表示-->
  <div class="container">
    <div class="row">
      <div class="col">

        <h2><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h2>
        <table class="table table-hover table-borderless">
          <tbody>
            <tr><th>ユーザー画像</th><th><%= attachment_image_tag @user, :icon_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></th></tr>
            <tr><th>ニックネーム</th><th><%= @user.nickname %></th></tr>
            <tr><th>評価</th><th><%= link_to "評価", rate_user_path(@user) %></th></tr>
          </tbody>
        </table>

        <% if @current_sell_now.present? || @user_sell_now.present? %>
          <% unless @user.id == current_user.id %>
            <% if @is_room == true %>
              <p>
                <%= link_to "チャット", room_path(@room_id), class: 'btn btn-success'%>
              </p>
            <% else %>
              <%= form_with model: @room, url: rooms_path, local: true do |f| %>
                <%= fields_for @entry do |e| %>
                  <%= e.hidden_field :user_id, value: @user.id %>
                <% end %>
                <p>
                  <%= f.submit "チャット" , class: 'btn btn-success'%>
                </p>
              <% end %>
            <% end %>
          <% end %>
        <% end %>

        <% @sell_items.each do |sell_item| %>
          <div class="user_sell_item">
            <%= link_to sell_item_path(sell_item) do %>
              <%= attachment_image_tag sell_item.item, :item_image, :fill, 100, 100, format: 'jpeg' %>
              <%= sell_item.name %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>