<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-sm-12 border px-0">
      <div class="rate_header border-bottom">
        <div class="back-btn pt-2 pl-2">
          <%= link_to user_path(@user) do %>
            <div class="Arrow-Left p-1"></div>
          <% end %>
        </div>
        <p class="top-title text-center py-3">評価一覧</p>
        <p class="text-center text-secondary"><%= @user.nickname %>さん<p>
        <div class="star rate-username-rate-avg d-flex justify-content-center align-items-center">
          <%= render 'public/users/rate_avg', {user_rate_avg: @user_rate_avg} %>
          <p class="m-0">
            <% if @user_rate_avg.nan? %>
              <p>（評価はまだされていません）</p>
            <% else %>
              <p>（評価：<%= @user_rate_avg %>）</p>
            <% end %>
          </p>
        </div>
      </div>
      <!--評価コメント-->
      <div id="chats">
        <%#= render partial: 'public/users/rate_comments', collection: @sell_items, as: :sell_item %>
        <% @sell_items.each do |sell_item| %>
          <div class="fukidasi">
            <div class="star rate-star-box text-left">
              <%= render 'public/users/rate_one', sell_item: sell_item %>
            <div class="faceicon">
              <%= attachment_image_tag sell_item.buyer, :icon_image, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", class:"rounded-circle mb-3" %>
            </div>
            <div class="chatting">
              <div class="says">
                <p class ="font-weight-bold d-flex">

                  <%= sell_item.buyer.nickname %>
                </p>
                <p><%= sell_item.rating_comment %></p>
                <p class ="text-right text-secondary small">商品購入日<%= sell_item.buy_date.strftime("%Y年 %m月 %d日") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>