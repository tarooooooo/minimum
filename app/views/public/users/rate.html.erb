<div class="container">
  <div class="row">
    <div class="col">
      <h3><%= @user.nickname %>さん</h3>
      <div class="row">
        <div id="star-rate-avg"></div>
        <script>
          // 繰り返し処理でもidをidを一意にできるようにnote_idを入れる
        $('#star-rate-avg').raty({
          size: 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          half: true,
          // 読み込みだけで入力できない
          readOnly: true,
          score: <%= @user_rate_avg %>,
         });
        </script>
        <h5>（評価：<%= @user_rate_avg %>）</h5>
      </div>
      <table class="table">
        <thead>
          <tr>
          <th>購入者</th>
          <th>評価</th>
          <th>評価コメント</th>
          </tr>
        </thead>
        <tbody>
          <% @sell_items.each do |sell_item| %>
          <tr>
            <td>
              <%= sell_item.buyer.nickname %>
            </td>
            <td>
              <div id="star-rate-<%= sell_item.id %>"></div>
              <script>
                // 繰り返し処理でもidをidを一意にできるようにnote_idを入れる
              $('#star-rate-<%= sell_item.id %>').raty({
                size: 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half: true,
                // 読み込みだけで入力できない
                readOnly: true,
                score: <%= sell_item.rate %>,
               });
              </script>
            </td>
            <td>
              <%= sell_item.rating_comment %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
