<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-sm-12">
      <div class="back-btn pt-2 pl-2">
        <%= link_to user_path(current_user) do %>
          <div class="Arrow-Left p-1"></div>
        <% end %>
      </div>
      <div class="user-detail-title mt-5">
      <h4 class ="mb-5 text-center"><%= current_user.last_name %><%= current_user.first_name %>さんの会員詳細</h4>
      <div class="edit-user-link text-left">
        <div class="user-edit-button">
        <%= link_to edit_user_path(current_user) do %>
          <i class="fas fa-users-cog fa-2x user-edit"></i>
        <% end %>
        </div>
      </div>
      </div>
      <table class="table table-hover">
        <tbody>
          <tr><th>ニックネーム</th><th><%= current_user.nickname %></th></tr>
          <tr><th>氏名</th><th><%= current_user.last_name %><%= current_user.first_name %></th></tr>
          <tr><th>フリガナ</th><th><%= current_user.last_name_kana %><%= current_user.first_name_kana %></th></tr>
          <tr><th>年齢</th><th><%= current_user.age %>歳</th></tr>
          <tr><th>郵便番号</th><th><%= current_user.postal_code %></th></tr>
          <tr><th>住所</th><th><%= current_user.address %></th></tr>
          <tr><th>電話番号</th><th><%= current_user.phone_number %></th></tr>
          <tr><th>メールアドレス</th><th><%= current_user.email %></th></tr>
        </tbody>
      </table>
    </div>
  </div>
