<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="col-md-6 mx-auto">
  
    <div class="form-inline">
      <%= link_to user_path(visitor) do %>
        <%= image_tag avatar_url(visitor).to_s, class: "icon_mini" %>
        <strong>
          <%= visitor.name %><p>さんが</p>
        </strong>

      <% case notification.action %>
      <% when 'follow' then %>
        <%= "あなたをフォローしました" %>
        
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.sell_item, style: "font-weight: bold;" %>
        <%= "にいいねしました" %>
        
      <% when 'comment' then %>
        <% if notification.sell_item.user_id == visited.id %>
          <%= link_to "あなたの投稿", notification.sell_item, style: "font-weight: bold;" %>
        <% else %>
            <%= link_to post_path(notification.sell_item) do %>
              <%= image_tag avatar_url(notification.sell_item.user).to_s, class: "icon_mini" %>
              <strong>
                
               <%= notification.sell_item.user.name + 'さんの投稿' %>
               <%= "にコメントしました" %>
              </strong>
        <p class="text-muted mb-0">
          <%= Comment.find_by(id: notification.comment_id)&.comment %>
        </p>
    </div>
</div>
  <div class="small text-muted text-right">
    <%= time_ago_in_words(notification.created_at).upcase %>
  </div>