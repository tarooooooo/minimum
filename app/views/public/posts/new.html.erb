<div class="container">
  <div class="row">
    <div class ="row justify-content-center">
      <div class="col ">

        <%= form_with model: @post, local:true do |f| %>

          <div class="form-group">
            <p class="font-weight-bold"><%= f.label :タイトル %></p>
            <%= f.text_field :title, placeholder: 'タイトル', class: 'form-control' %>
          </div>

          <div class="form-group">
            <p class="font-weight-bold"><%= f.label :投稿内容 %></p>
            <p><%= f.text_area :content, class:"form-control w-100", 'data-provider': :summernote %></p>
          </div>

          <div class="new-item-btn py-3">
            <%= f.submit '投稿する', class: "btn btn-green w-100 pt-2" %>
          </div>

      <% end %>
      </div>
    </div>
  </div>
</div>
