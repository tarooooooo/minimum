<div class="container">
  <div class="row">
    <div class ="row justify-content-center">
      <div class="col ">

        <%= form_with model: @post, local:true do |f| %>

          <div class="field py-3">
            <%= f.label :タイトル %><br />
            <%= f.text_field :title, placeholder: 'タイトル', class: 'form-control' %>
          </div>

          <div class="field py-3">
            <%= f.label :内容 %><br />
            <%= f.text_area :content, placeholder: "内容", class:"form-control" %>
          </div>

          <div class="new-item-btn py-3">
            <%= f.submit '投稿する', class: "btn btn-green w-100 pt-2" %>
          </div>

      <% end %>
      </div>
    </div>
  </div>
</div>
