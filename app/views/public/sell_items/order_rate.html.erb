<div class="container">
  <h3>取引内容を評価し、取引を完了してください</h3>
  <%= form_with model: @sell_item,url: sell_item_path(@sell_item) ,method: :patch, local:true do |f| %>

      <div class="form-group row" id="star">
        <%= f.label :rate,'評価：', class:'p-1' %>
        <%= f.hidden_field :rate, id: :review_star %>
        <%= f.hidden_field :order_status, :value => :close_of_trading %>
      </div>
      <div class="form-group row">
        <%= f.label :rating_comment, "評価コメント" %>
        <%= f.text_field :rating_comment, class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit'評価する' , class: "btn btn-success" %>
      </div>

    <% end %>

    <script type="text/javascript">
     <!-- 評価 -->
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'sell_item[rate]',
        half: true,
      });
    </script>
</div>
