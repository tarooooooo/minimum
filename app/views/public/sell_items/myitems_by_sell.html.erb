<div class="container-fluid">

  <div class="row justify-content-center">
    <div class="col-lg-12 col-md-12 col-sm-12 p-0">
      <div class="new-item-box">
        <div class="sell-item-text text-center p-2 text-center">
          <p class="h3 m-0">Sell Items</p>
          <p class="m-0">出品した商品</p>
        </div>
        <div class="clothes-img">
          <div class="sell-item-top"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="sub-title text-center mb-5">
    <h4 class="text-center mt-5 green-title"> Items</h4>
    <div class="text-center">
      <%= link_to "出品中", myitems_by_order_status_path(order_status: "on_sell") %>
      <%= link_to "取引中", myitems_by_order_status_path(order_status: "now_trading_by_sell") %>
      <%= link_to "売却済", myitems_by_order_status_path(order_status: "close_of_trading_by_sell") %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12 p-0">
      <table class ="table table-hover table-inverse rem-table">
        <thead>
          <tr>
            <th></th>
            <th>アイテム</th>
            <th>ブランド</th>
            <th>価格</th>
            <th>取引</th>
          </tr>
        </thead>

        <% @sell_items.each do |sell_item| %>
        <tbody>
          <tr>

           <td>
             <%=link_to sell_item_path(sell_item) do %>
             <%= attachment_image_tag sell_item.item, :item_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
             <% end %>
           </td>

           <td>
             <%=link_to sell_item_path(sell_item) do %>
             <%= sell_item.name %>
             <% end %>
           </td>

           <td>
             <%= sell_item.item.brand.name %>
           </td>

           <td class="text-nowrap">
             <%= sell_item.order_price %>円
           </td>

           <td class="text-nowrap">
             <%= sell_item.order_status_i18n %>
           </td>

           </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>
