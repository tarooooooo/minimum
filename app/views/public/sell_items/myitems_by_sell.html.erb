<div class="container box">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-12 col-sm-12">
      <div class="sell_items_title py-3">
        <h4 class="text-center">
          <span class ="user-thin">
            Sell MyItems
          </span>
        </h4>
        <div class="text-center">
          <%= link_to "出品中", myitems_by_order_status_path(order_status: "on_sell") %>
          <%= link_to "取引中", myitems_by_order_status_path(order_status: "now_trading_by_sell") %>
          <%= link_to "売却済", myitems_by_order_status_path(order_status: "close_of_trading_by_sell") %>
        </div>
      </div>
      <div class="row justify-content-center">
         <% @sell_items.each do |sell_item| %>
          <div class="col px-1 flex-grow-0">
            <div class="card mx-1 my-1 border-0", style="width: 15rem">
              <%= link_to sell_item_path(sell_item) do %>
                <%= attachment_image_tag sell_item.item, :item_image, :fill, 400, 400, format: 'jpeg', style: "width: 15rem;" %>
                <div class="card-body p-1">

                  <p class="card-text m-0 no-wrap">
                    <%= sell_item.name %> : <%#= sell_item.item.brand.name %>
                  </p>

                  <p class ="card-text m-0">
                    <%= sell_item.order_price %> yen
                  </p>

                  <p class ="card-text m-0">
                    <%= sell_item.order_status_i18n %>
                  </p>
               </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
