<div class="container-fulid">
  <div class="box ml-5">
    <div class="search-form text-right">
      <%= form_with url: search_sell_items_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
<div class="row justify-content-center">
   <% @sell_items.each do |sell_item| %>
    <div class="co1 px-0 card mx-1 my-1", style="width: 15rem;">
      <%= link_to sell_item_path(sell_item), class:"" do %>
        <%= attachment_image_tag sell_item.item, :item_image, :fill, 200, 150, format: 'jpeg', style: "width: 15rem;" %>
        <div class="card-body">
          <h5 class ="card-title"><%= sell_item.name %></h5>
          <p class="card-text">¥<%= sell_item.order_price %></p>
          <% unless sell_item.order_status == "on_sell" %>
            <p>売却済み</p>
          <% end %>
       </div>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

</div>