<div class="container-fulid">
  <div class="row">
    <div class="col">
      <div class="search-form my-3">
          <div class="input-group justify-content-center">
            <%= form_with url: search_sell_items_path,class:"d-flex", method: :get, local: true do |f| %>
              <%= f.text_field :keyword, value: @keyword, class:"form form-control", placeholder:"アイテム名で検索できます。" %>
              <span class="input-group-btn">
                <%= button_tag type: 'submit', class: 'btn btn-default' do %>
                <i class="fas fa-search"></i>
                <% end %>
              </span>
            <% end %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="sell_item_index_image"></div>
    </div>
  </div>
  <div class="box ml-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-12 col-sm-12 ">

        <div class="row">
           <% @sell_items.each do |sell_item| %>
            <div class="col px-0 flex-grow-0">
              <div class="card mx-1 my-1", style="width: 12rem">
                <%= link_to sell_item_path(sell_item), class:"" do %>
                  <%= attachment_image_tag sell_item.item, :item_image, :fill, 200, 150, format: 'jpeg', style: "width: 12rem;" %>
                  <div class="card-body p-1">

                    <p class="card-text text-center"><%= sell_item.name %> : ¥<%= sell_item.order_price %></p>
                    <% unless sell_item.order_status == "on_sell" %>
                      <p>売却済み</p>
                    <% end %>
                 </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>