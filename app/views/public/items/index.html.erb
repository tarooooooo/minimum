<div class="container-fluid">

  <div class="row justify-content-center">
    <div class="col-lg-12 col-md-12 col-sm-12 p-0">
      <div class="new-item-box">
        <div class="sell-item-text text-center p-2 text-center">
          <p class="h3 m-0">My Items</p>
          <p class="m-0">マイアイテム</p>
        </div>
        <div class="clothes-img">
          <div class="sell-item-top"></div>
        </div>
      </div>
    </div>
  </div>

  <div class="sub-title text-center my-5">
    <div class="text-center">
      <%= link_to "全アイテム",items_path %>
      <%= link_to "所持アイテム", item_status_change_path(item_status: "on_keep") %>
      <%= link_to "廃棄アイテム", item_status_change_path(item_status: "discarded") %>
      <%= link_to "出品中", item_status_change_path(item_status: "on_sell") %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10 col-sm-12 p-0">
      <table class ="table table-hover table-inverse rem-table">
        <thead>
          <tr>
            <th></th>
            <th>アイテム</th>
            <th>ブランド</th>
            <th>価格</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
        <tbody>
          <tr>

           <td>
             <%=link_to item_path(item) do %>
             <%= attachment_image_tag item, :item_image, format: 'jpeg', fallback: "no_image.jpg" ,size: "40x40"%>
             <% end %>
           </td>

           <td>
             <%=link_to item_path(item) do %>
             <%= item.name %>
             <% end %>
           </td>

           <td>
             <%= item.brand.name %>
           </td>

           <td class="text-nowrap">
             <%= item.price %>円
           </td>

           <td class="text-nowrap">
             <%= item.item_status_i18n %>
           </td>

           </tr>
        </tbody>
        <% end %>
      </table>
    </div>

  </div>
</div>
