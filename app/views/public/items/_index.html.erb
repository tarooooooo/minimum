<div class="item_card d-grid gap-3">
  <div class="card border-0">
    <%= link_to item_path(item) do %>
      <%= image_tag "https://mypfbucket-resize.s3-ap-northeast-1.amazonaws.com/store/" + item.item_image_id + "-thumbnail." %>
      <div class="card-body p-0">
        <p class="card-text m-0">
          <%= item.name %>
        </p>
        <p class ="card-text m-0">
          <%= item.price %> yen
        </p>
      </div>
    <% end %>
  </div>
</div>