<div class="item_card d-grid gap-3">
  <div class="card border-0">
    <%= link_to item_path(item) do %>
      <%= attachment_image_tag item, :item_image, format: 'jpeg' %>
      <div class="card-body p-0">
        <p class="card-text m-0">
          <%= item.name %>
        </p>
        <p class ="card-text m-0">
          <%= item.price %> yen
        </p>
      </div>
    <% end %>
  </div>
</div>
