<% if current_user.already_liked?(sell_item) %>
  <%= link_to sell_item_likes_path(sell_item.id), method: :delete, remote: true do %>
    <i class="fas fa-heart"><%= sell_item.likes.count %></i>
  <% end %>
<% else %>
  <%= link_to sell_item_likes_path(sell_item), method: :post, remote: true do %>
    <i class="far fa-heart"><%= sell_item.likes.count %></i>
  <% end %>
<% end %>