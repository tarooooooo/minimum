<%= link_to 'javascript:void(0);', remote: false, onclick: "onclick_chart_btn()" do %> <%#ここで前のgenre(params)に応じて,次のgenreを切り替える %>
  <i class="far fa-caret-square-right fa-4x"></i>
<% end %>

<script>
function onclick_chart_btn() {
    var elements = document.getElementsByClassName('box-show');
    if (elements == null || elements[0].id.substr(0, 9) != 'category_') {
        location.href = '<%=charts_disposal_path(genre: genre) %>';
    }
    var cate = elements[0].id;
    cate = cate.replace('_', '=')
    location.href = '<%=charts_disposal_path(genre: genre) %>' + '&' + cate;
}

</script>

