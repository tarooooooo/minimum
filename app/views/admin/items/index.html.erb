<div class="container">
  <div class="row">
    <div class="col">
      <h2>アイテム一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>アイテムID</th>
            <th>アイテム名</th>
            <th>カテゴリー</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item_name, admin_item_path(item.id) %></td>
              <td><%= item.category.name %></td>
              <td><%= item.item_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>