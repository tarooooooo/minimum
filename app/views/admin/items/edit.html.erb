<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2><%= @item.name %>の詳細編集</h2>
      <%= form_with model: [:admin, @item], local: true do |f| %>
        <table class="table">
          <tr><th>アイテムID</th><th><%= @item.id %></th></tr>
          <tr><th>登録ユーザー</th><th><%= @item.user.last_name %><%= @item.user.first_name %></th></tr>

          <div class="form-group">
            <tr>
              <th>アイテム画像</th>
              <th><%= f.attachment_field :item_image, class:"form-control-file" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>アイテム名</th>
              <th><%= f.text_field :name, class: "form-control" %></th>
            </tr>
          </div>


          <div class="form-group">
            <tr>
              <th>カテゴリー</th>
              <th><%= f.collection_select :category_id, Category.all, :id, :name,{prompt: "選択してください"}, {class: "new-wrapper__main__input-select"} %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>カラー</th>
              <th><%= f.collection_select :color_id, Color.all, :id, :name,{prompt: "選択してください"}, {class: "new-wrapper__main__input-select"} %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>購入価格</th>
              <th><%= f.text_field :price, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>サイズ</th>
              <th><%= f.text_field :size, class: "form-control" %></th>
            </tr>
          </div>

          <div class="form-group">
            <tr>
              <th>アイテムステータス</th>
              <th>
                <div class="field">
                  <%= f.label :アイテムステータス %><br />
                  <%= f.radio_button :item_status, :on_keep %>
                  <%= f.label :所持, class: "job_type_label" %>
                  <%= f.radio_button :item_status, :discarded %>
                  <%= f.label :廃棄, class: "job_type_label" %>
                  <%= f.radio_button :item_status, :on_sell %>
                  <%= f.label :出品中, class: "job_type_label" %>
                </div>
                </div>
              </th>
            </tr>
          </div>
        </table>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>