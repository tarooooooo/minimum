<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>カラー一覧・追加</h2>
      <div class="create_cplor">
        <%= form_with model: [:admin, @color], local:true do |f| %>
          <div class="form-group">
            <label for="color_name">カラー名</label>
            <%= f.text_field :name %>
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
      </div>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th>カラー</th>
            <th></th>
            <th></th>
          </tr>
          <tbody>
            <% @colors.each do |color| %>
            <tr>
              <td>
                <%= color.name %>
              </td>
              <td>
                <%= link_to '編集', edit_admin_color_path(color.id), class: "btn btn-success" %>
              </td>
              <td>
                <%= link_to '削除', admin_color_path(color.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </thread>
      </table>
    </div>
  </div>
</div>
