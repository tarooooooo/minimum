<div class="container">
  <div class="row mt-5">
    <div class="col">
      <h2>カテゴリー一覧・追加</h2>
      <div class="create_category">
        <%= form_with model: [:admin, @category], local:true do |f| %>
          <div class="form-group">
            <label for="category_name">カテゴリー名</label>
            <%= f.text_field :name %>
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
      </div>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th>カテゴリー</th>
            <th></th>
            <th></th>
          </tr>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= link_to '編集', edit_admin_category_path(category.id), class: "btn btn-success" %>
              </td>
              <td>
                <%= link_to '削除', admin_category_path(category.id), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </thread>
      </table>
    </div>
  </div>
</div>
