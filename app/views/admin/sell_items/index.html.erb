<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>注文商品ID</th>
            <th>注文商品名</th>
            <th>購入者</th>
            <th>出品者</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @sell_items.each do |sell_item| %>
            <tr>
              <td><%= sell_item.id %></td>
              <td><%= link_to sell_item.name, admin_sell_item_path(sell_item.id) %></td>
              <td><%#= sell_item.seller.nickname %></td>
              <td><%#= sell_item.buyer.nickname %></td>
              <td><%= sell_item.order_status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>